<h1>Show the Family a New Photo</h1>

<%= form_for [@user, @photo], url: user_photos_path, html: { multipart: true } do |f| %>
  <% if @photo.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @photo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :photo_upload %>
    <%= f.file_field :picture %>
  </div>
  <%= f.submit "Add", class: "btn btn-primary" %>

